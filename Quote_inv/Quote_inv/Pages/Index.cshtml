@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            color: #333;
            line-height: 1.6;
        }

        h1, h2, h3 {
            margin: 0;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .navbar {
            background-color: #556b2f;
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
        }

            .navbar .logo {
                font-size: 1.5rem;
                font-weight: bold;
            }

            .navbar .cta-buttons {
                display: flex;
                gap: 15px;
            }

                .navbar .cta-buttons a {
                    background-color: #c1d8ac;
                    padding: 10px 20px;
                    border-radius: 5px;
                    color: #333;
                    transition: background-color 0.3s ease;
                }

                    .navbar .cta-buttons a:hover {
                        background-color: #a8c293;
                    }

        .hero {
            background-image: url('pexels-negativespace-34578.jpg');
            background-size: cover;
            background-position: center;
            padding: 150px 40px;
            text-align: center;
            position: relative;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(to bottom, rgba(255,255,255,0.4), rgba(255,255,255,0.5));
                z-index: 1;
            }

            .hero h1, .hero p, .hero .cta-buttons {
                position: relative;
                z-index: 2;
            }

            .hero h1 {
                font-size: 3rem;
                margin-bottom: 20px;
                color: #556b2f;
            }

            .hero p {
                font-size: 1.2rem;
                margin-bottom: 40px;
                color: #555;
            }

            .hero .cta-buttons {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 15px;
            }

                .hero .cta-buttons a {
                    background-color: #556b2f;
                    padding: 15px 30px;
                    border-radius: 5px;
                    color: white;
                    font-size: 1rem;
                    transition: background-color 0.3s ease;
                }

                    .hero .cta-buttons a:hover {
                        background-color: #6b8e23;
                    }

        .about-section {
            padding: 80px 40px;
            background-color: white;
            text-align: center;
        }

            .about-section h2 {
                font-size: 2.5rem;
                margin-bottom: 20px;
                color: #556b2f;
            }

            .about-section p {
                font-size: 1.1rem;
                max-width: 800px;
                margin: 0 auto;
                color: #555;
            }

        .footer {
            background-color: #556b2f;
            color: white;
            text-align: center;
            padding: 20px;
        }

            .footer p {
                margin: 0;
            }
    </style>
}

@section HeroContent {
    <div class="navbar">
        <div class="logo">Quotation & Invoicing System</div>
        <div class="cta-buttons">
            <a href="/Identity/Account/Login">Login</a>
            <a href="/Identity/Account/Register">Register</a>
        </div>
    </div>

    <div class="hero">
        <h1>Simplify Your Quotations and Invoices</h1>
        <p>Efficiently manage your business finances with our web-based quotation and invoicing system.</p>
        <div class="cta-buttons">
            <a href="/Index">Get Started</a>
            <a href="/Privacy">Privacy</a>
        </div>
    </div>

    <div class="about-section">
        <h2>About Our System</h2>
        <p>
            Our Quotation & Invoicing System is designed to help businesses of all sizes manage their financial workflows efficiently.
            Whether you're a freelancer or a large enterprise, our system is tailored to meet your needs.
        </p>
    </div>

    <div class="footer">
        <p>&copy; 2025 Quotation & Invoicing System. All rights reserved.</p>
    </div>
}
